<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="@drawable/ed_border"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:text="车辆账户充值"
        android:background="@color/dialog_title"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        android:layout_height="50dp">
    </TextView>
    <View
        android:background="#405a94"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="车牌号:"
            android:textColor="#405a94"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/car_names"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:text="辽A100003"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">

        <TextView
            android:text="充值金额"
            android:textSize="16dp"
            android:textColor="#405a94"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_width="100dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/car_recharge_num"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:paddingLeft="10dp"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:background="@drawable/ed_border"
                android:inputType="number"
                android:maxLength="3"
                android:hint="1-999"
                android:textSize="16dp"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="元"
                android:textSize="18dp"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:layout_height="match_parent" />

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:text="充值"
            android:id="@+id/recharges"
            android:layout_marginLeft="50dp"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/btn_blue"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="wrap_content"
            android:text="取消"
            android:layout_alignParentRight="true"
            android:id="@+id/cancel"
            android:textColor="#ffffff"
            android:background="@drawable/btn_blue"
            android:textSize="16dp"
            android:layout_marginRight="50dp"
            android:layout_height="wrap_content" />

    </RelativeLayout>



</LinearLayout>