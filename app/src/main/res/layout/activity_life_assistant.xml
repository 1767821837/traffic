<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.LifeAssistantActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView

                    android:id="@+id/tv_now"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="19°"
                    android:textColor="#3F51B5"
                    android:textSize="80sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_teday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:text="今天：12-24℃"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/img_rush"
            android:layout_width="50dp"
            android:layout_height="50sp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/rush" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="今天"
                    android:textColor="#3F51B5"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="明天"
                    android:textColor="#3F51B5"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_day1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="星期一"
                    android:textColor="#3F51B5"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_day2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="星期二"
                    android:textColor="#3F51B5"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_day3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="星期三"
                    android:textColor="#3F51B5"
                    android:textSize="18sp" />
            </LinearLayout>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/linechart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></com.github.mikephil.charting.charts.LineChart>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="今日生活指数"
                    android:textColor="#0089eb"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="#DAEDFF"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#DAEDFF"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginTop="15dp"
                                android:gravity="bottom"
                                android:src="@mipmap/uitravioletrays"
                                android:textColor="#1296DB" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:gravity="top"
                                android:text="紫外线指数"
                                android:textColor="#1296DB"
                                android:textSize="7sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1.5"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_uitravioletrays_tips"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginBottom="10dp"
                                android:layout_weight="1"
                                android:gravity="bottom"
                                android:text="中等(100)"
                                android:textColor="#1296DB"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_uitravioletrays_body"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginTop="-10dp"
                                android:layout_weight="1"
                                android:gravity="top"
                                android:scrollbars="vertical"
                                android:text="紫外线指数"
                                android:textColor="#1296DB"
                                android:textSize="8sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="#DAEDFF"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#DAEDFF"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginTop="15dp"
                                android:gravity="bottom"
                                android:src="@mipmap/cold"
                                android:textColor="#1296DB" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:gravity="top"
                                android:text="感冒指数"
                                android:textColor="#1296DB"
                                android:textSize="7sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1.5"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_cold_tips"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:layout_marginBottom="10dp"
                                android:gravity="bottom"
                                android:text="中等(100)"
                                android:textColor="#1296DB"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_cold_body"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginTop="-10dp"
                                android:layout_weight="1"
                                android:gravity="top"
                                android:text="紫外线指数"
                                android:textColor="#1296DB"
                                android:textSize="8sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="#DAEDFF"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#DAEDFF"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginTop="15dp"
                                android:gravity="bottom"
                                android:src="@mipmap/clothes"
                                android:textColor="#1296DB" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:gravity="top"
                                android:text="穿衣指数"
                                android:textColor="#1296DB"
                                android:textSize="7sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1.5"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_clothes_tips"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="bottom"
                                android:text="中等(100)"
                                android:layout_marginBottom="10dp"
                                android:textColor="#1296DB"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_clothes_body"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="top"
                                android:text="紫外线指数"
                                android:layout_marginTop="-10dp"
                                android:textColor="#1296DB"
                                android:textSize="8sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="#DAEDFF"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#DAEDFF"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginTop="15dp"
                                android:gravity="bottom"
                                android:src="@mipmap/sport"
                                android:textColor="#1296DB" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:gravity="top"
                                android:text="运动指数"
                                android:textColor="#1296DB"
                                android:textSize="7sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1.5"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_sport_tips"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="bottom"
                                android:text="中等(100)"
                                android:layout_marginBottom="10dp"
                                android:textColor="#1296DB"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_sport_body"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="top"
                                android:text="空气污染扩散指数"
                                android:layout_marginTop="-10dp"
                                android:textColor="#1296DB"
                                android:textSize="8sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="#DAEDFF"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#DAEDFF"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginTop="15dp"
                                android:gravity="bottom"
                                android:src="@mipmap/atmosphere"
                                android:textColor="#1296DB" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:gravity="top"
                                android:text="空气污染扩散指数"
                                android:textColor="#1296DB"
                                android:textSize="7sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1.5"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_atmosphere_tips"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="bottom"
                                android:layout_marginBottom="10dp"
                                android:text="中等(100)"
                                android:textColor="#1296DB"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_atmosphere_body"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="top"
                                android:layout_marginTop="-10dp"
                                android:text="紫外线指数"
                                android:textColor="#1296DB"
                                android:textSize="8sp" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="整点天气情况"
                android:textColor="#0089eb"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp">
               <android.support.v4.view.ViewPager
                   android:id="@+id/life_viewpager"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"></android.support.v4.view.ViewPager>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>