<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="cn.logcode.traffic.ui.fragment.MessageSelectFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择消息类型:"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"/>
        <Spinner
            android:id="@+id/spinner_select"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:entries="@array/spinner_select"></Spinner>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:orientation="horizontal">
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/black"/>
        <TextView
            android:id="@+id/tv_serial"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="序号"
            android:textColor="@color/black"
            android:layout_height="match_parent" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/black"/>
        <TextView
            android:id="@+id/tv_wraning"
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:gravity="center"
            android:text="报警类型"
            android:textColor="@color/black"
            android:layout_height="match_parent" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/black"/>
        <TextView
            android:id="@+id/tv_threshold"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="阀值"
            android:textColor="@color/black"
            android:layout_height="match_parent" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/black"/>
        <TextView
            android:id="@+id/tv_now"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="当前值"
            android:textColor="@color/black"
            android:layout_height="match_parent" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/black"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"/>
    <ListView
        android:id="@+id/list_select"
        android:layout_width="match_parent"
        android:layout_height="100dp"></ListView>


</LinearLayout>
