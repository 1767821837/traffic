<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="cn.logcode.traffic.ui.activity.QueryResultActivity">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_height="match_parent"
            android:background="#d6d6d6"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:id="@+id/car_card"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="20dp"
                    android:text="汽车资料卡片"
                    android:textColor="@color/black"
                    android:textSize="26sp" />

                <LinearLayout
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/puls_btn"
                    android:layout_toRightOf="@+id/car_card"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="5dp">
                    <Button
                        android:id="@+id/btn_qr"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/plus" />
                </LinearLayout>
            </RelativeLayout>

            <ListView
                android:id="@+id/l_qr_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="4dp"
                android:divider="#00000000"
                android:dividerHeight="20dp">

            </ListView>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_height="match_parent"
            android:background="#d6d6d6"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="违章详情"
                android:textSize="26sp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"/>
            <ListView
                android:id="@+id/r_qr_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="4dp"
                android:divider="#00000000"
                android:dividerHeight="20dp">
            </ListView>
        </LinearLayout>

</LinearLayout>
